@model UpdateBannerDto
@{
    ViewData["Title"] = "Banner Güncelleme Sayfası";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>
    <form method="post">
        <input type="hidden" asp-for="BannerId" class="form-control" />

        <label>Resim Url</label>
        <input type="text" asp-for="ImageUrl" class="form-control" />

        <br />
        <label>Başlık</label>
        <input type="text" asp-for="Title" class="form-control" />
        <br />
        <button class="btn btn-outline-primary">Güncelle</button>

    </form>
</h1>

